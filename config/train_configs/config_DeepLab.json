{
	"name": "MagicSky",
	"n_gpu": 1,
	
	"arch": {
		"type": "DeepLabV3Plus",
		"args": {
			"backbone": "resnet18",
			"output_stride": 16,
			"num_classes": 1,
			"freeze_bn": false,
			"pretrained_backbone": "/workspace/pretrain/resnet18.pth"
		}
	},

	"train_loader": {
		"type": "MagicSkyDataLoader",
		"args":{
			"root_dir": "./datasets/cvprw2020_sky_seg/",
			"img_resize": 384,
			"random_flip": true,
			"random_crop": true,
			"random_rotate": true,
			"random_brightness": true,
			"random_gamma": true,
			"random_saturation": true,
			"is_train": true,
			"shuffle": true,
			"batch_size": 16,
			"n_workers": 24,
			"pin_memory": true
		}
	},

	"valid_loader": {
		"type": "MagicSkyDataLoader",
		"args":{
			"root_dir": "./datasets/cvprw2020_sky_seg",
			"img_resize": 384,
			"is_train": false,
			"shuffle": false,
			"batch_size": 16,
			"n_workers": 24,
			"pin_memory": true
		}
	},

	"optimizer": {
		"type": "SGD",
		"args":{
			"lr": 1e-2,
			"momentum": 0.9,
			"weight_decay": 1e-8
		}
	},

	"loss": "ce_loss",
	"metrics": [
		"miou"
	],

	"lr_scheduler": {
		"type":"StepLR",
		"args":{
			"step_size": 50,
			"gamma": 0.1
		}
	},

	"trainer": {
		"epochs": 120,
		"save_dir": "./checkpoints/",
		"save_freq": 1,
		"verbosity": 2,
		"monitor": "valid_loss",
		"monitor_mode": "min"
	},

	"visualization":{
		"tensorboardX": true,
		"log_dir": "./models_log/"
	}
}